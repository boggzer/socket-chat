{
    "name": "socket-chat",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Typescript: server.ts,Typescript: index.ts,Node\" -c \"cyan.bold,green.bold,magentaBright.bold\" \"tsc -p ./src/ -w\" \"tsc -p ./src/public/ -w\" \"npm run watch-node\"",
        "build-ts": "tsc -p ./src && tsc -p ./src/public",
        "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
        "copy-static-assets": "mkdir -p ./dist/public && cp -R ./src/public/style.css ./dist/public/ && cp -R ./src/public/index.html ./dist/public/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/boggzer/socket-chat.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/boggzer/socket-chat/issues"
    },
    "homepage": "https://github.com/boggzer/socket-chat#readme",
    "dependencies": {
        "express": "^4.17.1",
        "node-dev": "^4.0.0",
        "requirejs": "^2.3.6",
        "socket.io": "^2.3.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/node": "^13.13.2",
        "@types/socket.io": "^2.1.4",
        "@types/typescript": "^2.0.0",
        "@types/shelljs": "0.7.9",
        "@types/eslint": "4.16.1",
        "@types/concurrently": "^4.1.0",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "babel-loader": "^8.1.0",
        "babel-watch": "^7.0.0",
        "css-loader": "^3.5.3",
        "eslint": "6.8.0",
        "concurrently": "5.1.0",
        "shelljs": "0.8.3",
        "jest": "^24.9.0",
        "@types/jest": "^24.0.23",
        "nodemon": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "style-loader": "^1.2.0",
        "ts-loader": "^7.0.1",
        "ts-node": "^8.9.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.8.3"
    }
}